<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ứng dụng ghi chú"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_note"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_edittext"
        android:padding="16dp"
        android:gravity="top|start"
        android:hint="Nhập ghi chú của bạn"
        android:textColor="@color/black"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu Ghi Chú"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:textColor="#FFF"
        android:layout_below="@+id/et_note"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_saved_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi chú đã lưu:"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:layout_below="@+id/btn_save"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_note_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_below="@+id/tv_saved_note"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_saved_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_below="@+id/tv_note_content"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
